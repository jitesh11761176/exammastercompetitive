  // Metadata
  metadata      Json?
  failureReason String?
  receiptUrl    String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  paidAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([itemType, itemId])
  @@index([createdAt])
  @@map("purchases")
}

enum PurchaseType {
  TEST_SERIES
  COURSE
  PYQ_COLLECTION
  SUBSCRIPTION
}

